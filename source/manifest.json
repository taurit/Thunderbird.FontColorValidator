{
    "manifest_version": 2,
    "name": "Font Color Check",
    "version": "1.1",
    "description": "Warns when sending an email with hardcoded black or white font colors",
    "applications": {
      "gecko": {
        "id": "font-color-check@taurit.pl",
        "strict_min_version": "78.0"
      }
    },
    "background": {
      "scripts": ["background.js"]
    },
    "permissions": [
      "compose",
      "tabs",
      "activeTab"
    ]
  }
  